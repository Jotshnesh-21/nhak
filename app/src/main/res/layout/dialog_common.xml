<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/dialog_bg"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_title"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:gravity="center"
            tools:text="are you sure you want to delete this card?"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium_x" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_normal"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/no"
                android:background="@drawable/bg_btn_fill_rounded"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="end"
                app:strokeColor="@color/color_fill_button"
                app:strokeWidth="1dp"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal_xx"
                app:cornerRadius="@dimen/margin_large" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_out_dialog_yes"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_normal_xx"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_fill_rounded"
                app:cornerRadius="@dimen/margin_large" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
